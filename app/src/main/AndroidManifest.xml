<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bk.arjaal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.ar" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconjewel"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ARJaal">
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.ARJaal.NoActionBar" />
        <activity
            android:name=".BillingDetails"
            android:exported="true"
            android:label="@string/title_activity_billing_details"
            android:theme="@style/Theme.ARJaal.NoActionBar" />
        <activity
            android:name=".OrderStatus"
            android:exported="true"
            android:label="@string/title_activity_order_status"
            android:theme="@style/Theme.ARJaal.NoActionBar" />
        <activity
            android:name=".ui.theme.BuyActivity"
            android:exported="true"
            android:label="@string/title_activity_buy"
            android:theme="@style/Theme.ARJaal.NoActionBar" />
        <activity
            android:name=".TryOnActivityJ"
            android:exported="true" />
        <activity
            android:name=".DetailsActivity"
            android:exported="true"
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.ARJaal.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ARJaal.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ARJaal.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required"
            tools:replace="android:value" />
    </application>

</manifest>